    <script>
        function closePromo() {
            document.querySelector('.promo-popup').style.animation = 'slideOut 0.3s ease-in';
            setTimeout(() => {
                document.body.style.display = 'none';
            }, 300);
        }

        function buyNow() {
            alert('¬°Gracias por tu inter√©s! Ser√°s redirigido al carrito de compras.');
            // Aqu√≠ ir√≠a la l√≥gica para redirigir al carrito o p√°gina de compra
        }

        // Agregar animaci√≥n de cierre
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideOut {
                from {
                    opacity: 1;
                    transform: scale(1);
                }
                to {
                    opacity: 0;
                    transform: scale(0.8);
                }
            }
        `;
        document.head.appendChild(style);

        // Auto-cerrar despu√©s de 15 segundos si no interact√∫a
        setTimeout(() => {
            if (document.body.style.display !== 'none') {
                closePromo();
            }
        }, 15000);
    </script>
